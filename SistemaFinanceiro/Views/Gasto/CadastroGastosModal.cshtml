@model SistemaFinanceiro.Models.Cartoes

@{
    int pessoa = Convert.ToInt32(Session["user"]);

    List<SistemaFinanceiro.Models.Cartoes> allCard = new List<SistemaFinanceiro.Models.Cartoes>();
}

<div class="modal fade" id="cadastrar-gastos-pessoa" role="dialog" style="z-index: 1050; display: none;" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cadastrar Gastos</h5>
                <button type="button" class="close fechar-gastos" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">X</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="validarGasto">
                    <input type="hidden" value="@pessoa" id="id-pessoa-gastos" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="input-group">
                                <label class="input-group-addon" for="cartao-pessoa">Cartão</label>
                                <select id="campo-numero-cartao" class="form-control" name="cartao-pessoa" required></select>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <label class="input-group-addon" for="campo-valor">R$</label>
                                <input id="campo-valor" name="campo-valor" class="form-control input-md col-sm-12" type="text"  required maxlength="12">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="input-group">
                                <label class="input-group-addon" for="descricao-gastos">Categoria</label>
                                <select id="campo-descricao-gastos" class="form-control  descricao-gastos" name="descricao-gastos" required></select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="input-group">
                                <label class="input-group-addon" for="campo-despesa">Descrição</label>
                                <input class="form-control" name="campo-despesa" type="text" id="descricao-despesa"  required/>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="input-group">
                                <label class="input-group-addon" for="campo-data-entrada">Data Pagamento</label>
                                <input id="data-entrada" name="campo-data-entrada" placeholder="DD/MM/AAAA" class="form-control " type="date" value="" required>
                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="input-group">
                                <label class="input-group-addon" for="campo-data-termino">Data término</label>
                                <input id="data-termino" name="campo-data-termino" placeholder="DD/MM/AAAA" class="form-control " type="date" value="" required>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="modal-footer">
                    <a href="#" type="button" class="btn btn-success nova-categoria" onclick="_gaq.push(['_trackEvent', 'example', 'try', 'alert-prompt']);">Nova categoria</a>
                    <button type="button" class="btn btn-primary" id="salvar-gastos-pessoa">Salvar</button>
                </div>
            </div>
        </div>
    </div>
</div>


