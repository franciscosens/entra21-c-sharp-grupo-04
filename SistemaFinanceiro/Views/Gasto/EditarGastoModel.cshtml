@{
    Layout = null;
}
<div class="modal fade" id="editar-gasto">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">

                    <span>X</span>

                </button>
                <h4>Editar Gastos</h4>
            </div>

            <div class="form-group">
                <label class="col-10" for="campo-valor">Valor do Gasto <h11></h11></label>
                <div class="col-md-10">
                    <input id="campo-valor" name="campo-valor" placeholder="" class="form-control input-md col-sm-12" required="" type="text">
                </div>
            </div>

            <div class="form-group">
                <label class="col-10" for="campo-data-comeco">Data de início<h11></h11></label>
                <div class="col-md-10">

                   <input id="data-comeco" name="campo-data-comeco" placeholder="DD/MM/AAAA" class="form-control input-md col-sm-12" required="" type="date" value="" maxlength="10" onkeypress="formatar('##/##/####', this)">
                </div>
            </div>

            <div class="form-group">
                <label class="col-10" for="campo-data-termino">Data de término<h11></h11></label>
                <div class="col-md-10">

                    <input id="data-termino" name="campo-data-termino" placeholder="DD/MM/AAAA" class="form-control input-md col-sm-12" required="" type="date" value="" maxlength="10" onkeypress="formatar('##/##/####', this)">
                </div>
            </div>
            <div class="form-group">

            </div>
            <div class="form-group">

                <label class="col-10" for="campo-descricao">Descrição <h11></h11></label>
                <div class="col-md-10">
                    <input id="campo-descricao" name="campo-descricao" placeholder="" class="form-control input-md col-sm-12" required="" type="text">
                </div>
            </div>
        </div>

        <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            <input type="submit" class="btn btn-success" value="Salvar" id="salvar-gastos-editar">

        </div>
    </div>
</div> 