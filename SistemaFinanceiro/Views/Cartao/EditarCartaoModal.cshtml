
@{
    Layout = null;
}

<div class="modal fade" id="editar-cartoes-modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
                <h4>Editar Cartão</h4>
            </div>
            <div class="modal-body">

                <div class="form-group">
                    <label class="col-md-2 control-label" for="cartao-editar">Número cartão<h11>*</h11></label>
                    <input id="campo-cartao-editar" name="cartao-editar" placeholder="" class="form-control input-md col-sm-6" required="" type="text">
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="conta-editar">Número Conta<h11>*</h11></label>
                    <input id="campo-conta-editar" name="conta-editar" placeholder="" class="form-control input-md col-sm-6" required="" type="text">
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="bandeira-editar">Bandeira<h11>*</h11></label>
                    <input id="campo-bandeira-editar" name="bandeira-editar" placeholder="" class="form-control input-md col-sm-6" required="" type="text">
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="banco-editar">Banco<h11>*</h11></label>
                    <input id="campo-banco-editar" name="banco-editar" placeholder="" class="form-control input-md col-sm-6" required="" type="text">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal" id="cancelar-cadastro-categoria">Cancelar</button>
                    <input type="submit" class="btn btn-primary" value="Salvar" id="salvar-editar-modal">
                </div>


            </div>
        </div>
    </div>
</div>