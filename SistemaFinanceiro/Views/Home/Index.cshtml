@{
    Layout = "~/Views/Shared/Master.cshtml";
}
<!-- Statistics and revenue Start -->
<div class="col-md-12 ">
    <div class="card card-statistics ">
        <div class="card-header ">
            <div class="card-header-left ">
                <h5>Gerente Financeiro</h5>
            </div>
            <div class="card-header-right">
                <ul class="list-unstyled card-option">
                    <li><i class="icofont icofont-simple-left "></i></li>
                    <li><i class="icofont icofont-maximize full-card"></i></li>
                    <li><i class="icofont icofont-minus minimize-card"></i></li>
                    <li><i class="icofont icofont-refresh reload-card"></i></li>
                    <li><i class="icofont icofont-error close-card"></i></li>
                </ul>
            </div>
        </div>
        <div class="card-block" id="carregarDados">
            <div class="row ">
                <div class="col-sm-4 ">
                    <div class="row stats-block">
                        <div class="col-lg-6 ">
                            <div class="progressbar-v-1" id="porcentoCarteira">
                                <div class="chart porcentoCarteira" data-barcolor="#4680FE" data-trackcolor="#dbdada" data-linewidth="6" data-barsize="110">
                                    <div class="chart-percent"><span></span>%</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 ">
                            <h2 class="f-w-400 saldo-recebido"></h2>
                            <p class="text-muted">Dinheiro total</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 ">
                    <div class="row stats-block">
                        <div class="col-lg-6 ">
                            <div class="progressbar-v-1" id="teste">
                                <div class="chart dial porcentoGasto" data-barcolor="#FC6180" data-trackcolor="#dbdada" data-linewidth="6" data-barsize="110" id="meu-teste">
                                    <div class="chart-percent"><span></span>%</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 ">
                            <h2 class="f-w-400"><span id="total-gastos"></span></h2>
                            <p class="text-muted ">Dinheiro gasto</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-4 ">
                    <div class="row stats-block">
                        <div class="col-lg-6 ">
                            <div class="progressbar-v-1">
                                <div class="chart" data-percent="75" data-barcolor="#FFB64D" data-trackcolor="#dbdada" data-linewidth="6" data-barsize="110">
                                    <div class="chart-percent"><span></span>%</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 ">
                            <h2 class="f-w-400 ">3,198</h2>
                            <p class="text-muted ">Receita total</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Statistics and revenue End -->
<!--Graficos INICIO-->
<div class="col-md-12 col-xl-12">
    <div class="card">
        <div class="card-header">
            <h5>Estatisticas</h5>
            <div class="card-header-left ">
            </div>
            <div class="card-header-right">
