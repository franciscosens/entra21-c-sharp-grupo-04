@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/Master.cshtml";
}

<h2>Editar</h2>

<form action="/Pessoas/Update" method="post">

    <div class="form-horizontal">


        <input type="hidden" name="Pessoas.Id" value="@ViewBag.Pessoas.Id" class="form-control" />

        <div class="form-group">
            <label class="col-md-2 control-label" for="campo-nome">Nome <h11>*</h11></label>
            <div class="col-md-8">
                <input id="campo-nome" name="Pessoas.Nome" placeholder="" class="form-control input-md" required="" type="text" value="@ViewBag.Pessoas.Nome">
            </div>
        </div>


        <div class="form-group">
            <label class="col-md-2 control-label" for="campo-idade">Idade</label>
            <div class="col-md-4">
                <input type="text" class="form-control input-md" name="Pessoas.Idade" id="campo-idade" value="@ViewBag.Pessoas.Idade" />
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-1 control-label" for="radios">Sexo <h11>*</h11></label>
            <div class="col-md-10">
                <label required="" class="radio-inline" for="ampo-sexo-feminino">
                    <input name="Pessoas.Sexo" id="campo-sexo-feminino" value="F" type="radio">
                    Feminino
                </label>
                <label class="radio-inline" for="campo-sexo-masculino">
                    <input name="Pessoas.Sexo" id="campo-sexo-masculino" value="M" type="radio">
                    Masculino
                </label>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label" for="campo-cpf">CPF <h11>*</h11></label>
            <div class="col-md-2">
                <input id="campo-cpf" name="Pessoas.CPF" placeholder="Apenas números" class="form-control input-md" required="" type="text" maxlength="11" pattern="[0-9]+$" value="@ViewBag.Pessoas.CPF">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-1 control-label" for="campo-nascimento">Nascimento<h11>*</h11></label>
            <div class="col-md-2">
                <input id="campo-nascimento" name="Pessoas.Data_Nascimento" placeholder="DD/MM/AAAA" class="form-control input-md" required="" type="text" maxlength="10" onkeypress="formatar('##/##/####', this)" value="@ViewBag.Pessoas.Data_nascimento">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label" for="campo-telefone">Telefone <h11>*</h11></label>
            <div class="col-md-2">
                <input id="campo-telefone" name="Pessoas.Telefone" class="form-control" placeholder="XX XXXXX-XXXX" required="" type="text" maxlength="13" pattern="\[0-9]{2}\ [0-9]{4,6}-[0-9]{3,4}$"
                       onkeypress="formatar('## #####-####', this)" value="@ViewBag.Pessoas.Telefone">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
