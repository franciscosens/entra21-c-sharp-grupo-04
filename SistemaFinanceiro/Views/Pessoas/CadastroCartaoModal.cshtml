@{
    int pessoa = Convert.ToInt32(Session["user"]);
}

<div class="modal fade" id="cadastrar-cartoes-pessoa">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
                <h4>Cadastrar Cartão</h4>
            </div>
            <div class="modal-body">
                <input type="hidden" value="@pessoa" id="idpessoa-cartao" />

                <div class="row">                
                <div class="col-sm-6">
                <div class="form-group">
                    <label class="col-md-10" for="numero-Cartao">Número cartão</label>
                    <input id="campo-numero-Cartao" name="numero-cartao" class="form-control input-md col-sm-12 numero-Cartao" required="" type="text" value="">
                </div>
                </div>

                   <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-sm-10" for="numero-Conta">Número Conta</label>
                        <input id="campo-numero-Conta" name="numero-conta" class="form-control input-md col-sm-12 numero-Conta form-control-bold" required="" type="text" value="">
                    </div>
                </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-10" for="bandeira">Bandeira</label>
                            <input id="campo-bandeira" name="bandeira" class="form-control input-md col-sm-12 numero-Conta form-control-bold" required="" type="text" value="">
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label class="col-sm-10" for="banco">Banco</label>
                            <input id="campo-bandeira" name="banco" class="form-control input-md col-sm-12 numero-Conta form-control-bold" required="" type="text" value="">
                        </div>
                    </div>

                    <div class="modal-footer">

                        <button type="button" class="btn btn-danger" data-dismiss="modal" id="cancelar-cadastro-cartao">Cancelar</button>
                        <input type="submit" class="btn btn-primary" value="Salvar" id="salvar-cartao">

                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
