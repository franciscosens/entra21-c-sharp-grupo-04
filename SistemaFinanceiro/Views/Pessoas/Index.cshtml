@model IEnumerable<SistemaFinanceiro.Models.Pessoas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Cadastro")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data_nascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th></th>
    </tr>

@foreach (SistemaFinanceiro.Models.Pessoas pessoas in @ViewBag.Pessoas) {
    <tr id="linha-@pessoas.Id">
        <td>
            @Html.DisplayFor(modelItem => pessoas.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => pessoas.Idade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => pessoas.Sexo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => pessoas.CPF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => pessoas.Data_nascimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => pessoas.Telefone)
        </td>
        <td>
            <a href="#" class="btn btn-danger excluir-pessoa" data-id="@pessoas.Id" data-target="#exampleModal" data-toggle="modal">Exlcuir</a> |
            <a href="#" class="btn btn-warning editar-pessoa" data-id="@pessoas.Id" data-target="#editar-pessoa-modal" data-toggle="modal">Editar</a> |
            @Html.ActionLink("Editar", "Editar", new { id = pessoas.Id }) |
            @Html.ActionLink("Details", "Details", new { id = pessoas.Id }) |
            @Html.ActionLink("Excluir", "Excluir", new { id = pessoas.Id })
        </td>
    </tr>
}

</table>
@section script{


    }

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                AVISO!
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Deseja mesmo Excluir ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="yes-option">Excluir</button>
            </div>
        </div>
    </div>
</div>
@* inicio modal editar *@

<div class="modal fade" id="editar-pessoa-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="campo-nome">Nome <h11>*</h11></label>
                            <div class="col-md-6">
                                <input id="campo-nome" name="Pessoas.Nome" placeholder="" class="form-control input-md" required="" type="text">
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-md-2 control-label" for="campo-idade">Idade</label>
                            <div class="col-md-1">
                                <input type="text" class="form-control input-md" name="Pessoas.Idade" id="campo-idade" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-1 control-label" for="radios">Sexo <h11>*</h11></label>
                            <div class="col-md-10">
                                <label required="" class="radio-inline" for="ampo-sexo-feminino">
                                    <input name="Pessoas.Sexo" id="campo-sexo" value="F" type="radio">
                                    Feminino
                                </label>
                                <label class="radio-inline" for="campo-sexo-masculino">
                                    <input name="Pessoas.Sexo" id="campo-sexo" value="M" type="radio">
                                    Masculino
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="campo-cpf">CPF <h11>*</h11></label>
                            <div class="col-md-2">
                                <input id="campo-cpf" name="Pessoas.CPF" placeholder="Apenas números" class="form-control input-md" required="" type="text" maxlength="11" pattern="[0-9]+$">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-1 control-label" for="campo-nascimento">Nascimento<h11>*</h11></label>
                            <div class="col-md-2">
                                <input id="campo-nascimento" name="Pessoas.Data_Nascimento" placeholder="DD/MM/AAAA" class="form-control input-md" required="" type="date" maxlength="10" onkeypress="formatar('##/##/####', this)">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label" for="campo-telefone">Telefone <h11>*</h11></label>
                            <div class="col-md-2">
                                <input id="campo-telefone" name="Pessoas.Telefone" class="form-control" placeholder="XX XXXXX-XXXX" type="text" maxlength="13" pattern="\[0-9]{2}\ [0-9]{4,6}-[0-9]{3,4}$"
                                       onkeypress="formatar('## #####-####', this)">
                            </div>
                        </div>
                        <!-- Search input-->
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="CEP">CEP <h11>*</h11></label>
                            <div class="col-md-2">
                                <input id="cep" name="Pessoas.Cep" placeholder="Apenas números" class="form-control input-md" required="" type="search" maxlength="8" pattern="[0-9]+$">
                            </div>
                            <div class="col-md-2">
                                <button type="button" class="btn btn-primary" onclick="pesquisacep(cep.value)">Pesquisar</button>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Prepended text-->
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prependedtext">Endereço</label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <span class="input-group-addon">Rua</span>
                                    <input id="rua" name="rua" class="form-control" placeholder="" required="" readonly="readonly" type="text">
                                </div>

                            </div>
                            <div class="col-md-2">
                                <div class="input-group">
                                    <span class="input-group-addon">Nº <h11>*</h11></span>
                                    <input id="numero" name="numero" class="form-control" placeholder="" required="" type="text">
                                </div>

                            </div>

                            <div class="col-md-3">
                                <div class="input-group">
                                    <span class="input-group-addon">Bairro</span>
                                    <input id="bairro" name="bairro" class="form-control" placeholder="" required="" readonly="readonly" type="text">
                                </div>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label" for="prependedtext"></label>
                            <div class="col-md-4">
                                <div class="input-group">
                                    <span class="input-group-addon">Cidade</span>
                                    <input id="cidade" name="cidade" class="form-control" placeholder="" required="" readonly="readonly" type="text">
                                </div>

                            </div>

                            <div class="col-md-2">
                                <div class="input-group">
                                    <span class="input-group-addon">Estado</span>
                                    <input id="estado" name="estado" class="form-control" placeholder="" required="" readonly="readonly" type="text">
                                </div>

                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="edit-option">Salvar</button>
            </div>
        </div>
    </div>
</div>

