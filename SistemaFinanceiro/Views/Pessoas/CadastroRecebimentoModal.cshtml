@model SistemaFinanceiro.Models.Categoria

@{
    int pessoa = Convert.ToInt32(Session["user"]);
}

<div class="modal" id="modal-recebimento-pessoa" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" value="@pessoa" id="id-pessoa" />
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label class="col-md-1 control-label valor" for="campo-valor-recebimento">Valor</label>
                            <input id="campo-recebimento-valor" name="campo-valor-recebimento" class="form-control autonumber  form-control-bold" type="text" data-a-sep="." data-a-dec=",">
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <label class="col-md-1 control-label" for="campo-data-recebimento">Data</label>
                        <div class="form-group">
                            <input id="campo-recebimento-data" name="campo-data-recebimento" placeholder="DD/MM/AAAA" class="form-control form-control-bold" type="date" value="">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <label class="col-md-1 control-label" for="campo-descricao-recebimento">Descrição<h11>*</h11></label>
                            <div class="col-md-8">
                                <select id="campo-descricao" class="form-control  descricao-recebimento  form-control-bold" name="descricao"></select>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                @*<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>*@
                <button type="button" class="btn btn-primary" id="cadastrar-recebimento">Salvar</button>
            </div>
        </div>
    </div>
</div>