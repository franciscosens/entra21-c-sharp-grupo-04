@{
    int pessoa = Convert.ToInt32(Session["user"]);
}

<div class="modal fade" id="cadastrar-gastos-pessoa">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
                <h5>Cadastrar Gastos</h5>
            </div>
            <div class="modal-body">
                <input type="hidden" value="@pessoa" id="id-pessoa-gastos" />

                <div class="form-group">
                    <label class="col-10" for="campo-valor">Valor do Gasto <h11></h11></label>
                    <div class="col-md-10">
                        <input id="campo-valor" name="campo-valor" placeholder="" class="form-control input-md col-sm-12" required="" type="text">
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-10" for="campo-data-entrada">Data de Entrada <h11></h11></label>
                    <div class="col-md-10">
                        <input id="campo-data-entrada" name="campo-data-entrada" placeholder="DD/MM/AAAA" class="form-control input-md col-sm-12" required="" type="date" value="" maxlength="10" onkeypress="formatar('##/##/####', this)">
                    </div>
                </div>



                <div class="form-group">
                    <label class="col-10" for="campo-vencimento">Data de Vencimento <h11></h11></label>
                    <div class="col-md-10">
                        <input id="campo-vencimento" name="campo-vencimento" placeholder="DD/MM/AAAA" class="form-control input-md col-sm-12" required="" type="date" value="" maxlength="10" onkeypress="formatar('##/##/####', this)">
                    </div>
                </div>


                <div class="col-md-5">
                    <div class="form-group">
                        <label class="col-md-1 control-label" for="campo-descricao-gastos">Descrição<h11>*</h11></label>
                        <div class="col-md-5">
                            <select id="campo-descricao-gastos" class="form-control  descricao-gastos" name="descricao"></select>
                        </div>
                    </div>
                </div>


                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal" id="cancelar-cadastro-pessoa">Cancelar</button>
                    <input type="submit" class="btn btn-primary" value="Salvar" id="salvar-gastos-pessoa">
                </div>
            </div>
        </div>
    </div>
</div>

