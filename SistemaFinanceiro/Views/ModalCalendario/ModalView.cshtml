@model SistemaFinanceiro.Models.Cartoes

@{
    int pessoa = Convert.ToInt32(Session["user"]);

    List<SistemaFinanceiro.Models.Cartoes> allCard = new List<SistemaFinanceiro.Models.Cartoes>();
}

<div class="modal fade" id="modal-cadastro-gasto-calendario" role="dialog" style="z-index: 1050; display: none;" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cadastrar Gastos</h5>
                <button type="button" class="close fechar-gastos" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">X</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" value="@pessoa" id="id-pessoa-gastos-calendario" />
                <div class="row">
                    <div class="col-md-5">
                        <div class="input-group">
                            <label class="input-group-addon" for="cartao-pessoa-calendario">Cartão</label>
                            <select id="campo-calendario-numero-cartao" class="form-control" name="cartao-pessoa-calendario"></select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="input-group">
                            <label class="input-group-addon" for="valor-calendario">Valor</label>
                            <input id="campo-calendario-valor"  name="valor-calendario" placeholder="" class="form-control input-md col-sm-12" required type="text">
                        </div>
                    </div>
                </div>
               

                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group">
                            <label class="input-group-addon" for="startcampo">Data Pagamento</label>
                            <input id="start" name="startcampo" placeholder="DD/MM/AAAA" class="form-control" type="datetime-local" value="">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group">
                            <label class="input-group-addon" for="endcampo">Data término</label>
                            <input id="end" name="endcampo" placeholder="DD/MM/AAAA" class="form-control" type="datetime-local" value="">
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-5">
                        <div class="input-group">
                            <label class="input-group-addon" for="descricao-gastos-calendario">Categoria</label>
                            <select id="campo-calendario-descricao" class="form-control" name="descricao-gastos-calendario"></select>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group">
                            <label class="input-group-addon" for="campo-despesa">Descrição</label>
                            <input class="form-control" name="campo-despesa" type="text" id="calendario-descricao-despesa" />
                        </div>
                    </div>
                </div>
                

                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="salvar-gastos-calendario">Salvar</button>
                </div>

            </div>
        </div>
    </div>
</div>

