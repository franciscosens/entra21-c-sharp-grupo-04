@model SistemaFinanceiro.Models.Cartoes

@{
    int pessoa = Convert.ToInt32(Session["user"]);

}

<div class="modal fade" id="modal-editar-gasto-calendario" role="dialog" style="z-index: 1050; display: none;" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Editar</h5>
                <button type="button" class="close fechar-modal-editar-gasto-calendario" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">X</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" value="@pessoa" id="id-gastos-calendario" />
                <div class="row">
                    <div class="col-md-5">
                        <div class="input-group">
                            <label class="input-group-addon" for="editar-cartao-pessoa-calendario">Cartão</label>
                            <select id="calendario-numero-cartao-editar" class="form-control" name="editar-cartao-pessoa-calendario"></select>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="input-group">
                            <label class="input-group-addon" for="editar-valor-calendario">Valor</label>
                            <input id="campo-calendario-valor-editar" name="editar-valor-calendario" placeholder="" class="form-control input-md col-sm-12" required type="text">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group">
                            <label class="input-group-addon" for="editar-startcampo">Data Pagamento</label>
                            <input id="start-editar" name="editar-startcampo" placeholder="DD/MM/AAAA" class="form-control" type="date">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="input-group">
                            <label class="input-group-addon" for="editar-endcampo">Data término</label>
                            <input id="end-editar" name="editar-endcampo" placeholder="DD/MM/AAAA" class="form-control" type="date">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <div class="input-group">
                            <label class="input-group-addon" for="editar-descricao-gastos-calendario">Categoria</label>
                            <select id="campo-calendario-descricao-editar" class="form-control" name="editar-descricao-gastos-calendario"></select>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group">
                            <label class="input-group-addon" for="editar-campo-despesa">Descrição</label>
                            <input class="form-control" name="editar-campo-despesa" type="text" id="calendario-descricao-despesa-editar" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="botao-modal-editar-gasto-calendario">Editar</button>
                </div>

            </div>
        </div>
    </div>
</div>

