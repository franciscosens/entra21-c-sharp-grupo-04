@{
    Layout = null;
}


<div class="modal fade" id="editar-categoria-modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span>X</span>
                </button>
                <h4>Editar categoria</h4>
            </div>
            <div class="modal-body">
                <div class="form">
                    <label class="col-md-2 control-label" for="campo-categoria-nome">Nome <h11>*</h11></label>
                    <input id="campo-nome-categoria" name="campo-categoria-nome" placeholder="" class="form-control input-md col-sm-6" required="" type="text">
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                    <input type="submit" class="btn btn-success" value="Salvar" id="salvar-categoria-cadastro-modal">
                </div>
            </div>
        </div>
    </div>
</div>

