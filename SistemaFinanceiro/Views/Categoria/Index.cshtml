@model IEnumerable<SistemaFinanceiro.Models.Categoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}

<a href="#" class="btn btn-primary cadastrar-categoria" data-target="#cadastrar-categoria-modal" data-toggle="modal">Cadastrar</a>
<a href="#" class="btn btn-warning editar-categoria" data-target="#editar-categoria-modal" data-toggle="modal">Editar</a>
