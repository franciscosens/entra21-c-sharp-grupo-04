    <div class="table-responsive dt-responsive">
        <table id="tabela-categoria" class="table table-striped tabela-categoria-index" style="width:100%">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th> 
                </tr>
            </thead>
            <tbody></tbody>
            <tfoot>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

<a href="#" class="btn btn-danger modal-usuario" data-target="#modal-perfil-usuario" data-toggle="modal">perfil usuario</a>
