@model SistemaFinanceiro.Models.Categoria

@{
    int pessoa = Convert.ToInt32(Session["user"]);
}

<div class="modal fade" id="modal-recebimento-pessoa" tabindex="-1" role="dialog" style="z-index: 1050; display: none;" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Cadastrar Recebimento</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">X</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="validar-recebimento">
                    <input type="hidden" value="@pessoa" id="id-pessoa" />
                    <div class="row">
                        <div class="col-md-5">
                            <div class="input-group">
                                <label class="input-group-addon" for="campo-valor-recebimento">R$</label>
                                <input id="campo-recebimento-valor" name="campo-valor-recebimento" class="form-control" type="text" @*data-thousand="." data-decimal=","*@ required maxlength="12">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="input-group">
                                <label class="input-group-addon" for="campo-data-recebimento">Data</label>
                                <input id="campo-recebimento-data" name="campo-data-recebimento" placeholder="DD/MM/AAAA" class="form-control" type="date" value="" required>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="input-group">
                                <span class="input-group-addon" for="campo-descricao-recebimento">
                                    <i class="icofont-listing-box"></i>
                                </span>
                                <select class="form-control" name="descricao-recebimento" id="campo-descricao-recebimento" required></select>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="modal-footer">
                    @*<a href="#" type="button" class="btn btn-success categoria-recebimento" onclick="_gaq.push(['_trackEvent', 'example', 'try', 'alert-prompt']);">Nova categoria</a>*@
                    <button type="button" class="btn btn-primary" id="cadastrar-recebimento">Salvar</button>
                </div>
            </div>
        </div>
    </div>
</div>
